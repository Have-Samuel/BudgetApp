<div>
  <button type="button">
    <svg xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  <h2>Categories</h2>
  <div>
    <svg xmlns="http://www.w3.org/2000/svg">
      <path stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
    </svg>
  </div>
</div>

<%= render 'shared/menu'%>
<div>
  <%=@categories.each do |category|%>
    <a href=<%=entities_index_path(category_id: category.id)%> >
      <div>
        <% if category.image.attached?%>
          <%= image_tag(category.image.representation)%>
          <%else%>
          <img src=<%=image_path("save-money.png")%> />
          <%end%>
          <div>
            <p><%=category.name%></p>
            <p><%=number_to_currency category.entities.where(user: current_user).sum(:amount)%></p>
          </div>
      </div>
      </a>
      <%end%> 
</div>
<%=button_to "Add Category", categories_new_path, method: :get%>
